<%= form_for(@recipe) do |f| %>
    <% if @recipe.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

            <ul>
                <% @recipe.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.label :beer %><br />
        <%= f.collection_select(:beer_id, Beer.all, :id, :name, :prompt => true) %>
    </div>
    <div class="field">
        <%= f.label :type %><br />
        <%= f.collection_select(:recipe_type_id, RecipeType.all, :id, :name, :prompt => true) %>
    </div>
    <div class="field">
        <%= f.label :directions %><br />
        <%= f.text_area :directions %>
    </div>

    <p>
        <b>Ingredients</b><br />
        <%= f.collection_select :ingredient_ids, Ingredients::Ingredient.all(:order => 'name'), :id, :name, {}, :multiple => true %>
    </p>
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>
