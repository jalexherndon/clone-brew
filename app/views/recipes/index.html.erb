<h1>Listing recipes</h1>

<table>
    <tr>
        <th>Beer</th>
        <th>Directions</th>
        <th>Recipe type</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    <% @recipes.each do |recipe| %>
        <tr>
            <td><%= recipe.beer.name %></td>
            <td><%= recipe.directions %></td>
            <td><% unless recipe.recipe_type.nil?%><%= recipe.recipe_type.name %><% end %></td>
            <td><%= link_to 'Show', recipe %></td>
            <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
            <td><%= button_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
</table>

<br />

<%= link_to 'New Recipe', new_recipe_path %>
