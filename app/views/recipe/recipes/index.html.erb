<h1>Listing recipe_recipes</h1>

<table>
  <tr>
    <th>Beer</th>
    <th>Directions</th>
    <th>Recipe type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @recipe_recipes.each do |recipe_recipe| %>
  <tr>
    <td><%= recipe_recipe.beer.name %></td>
    <td><%= recipe_recipe.directions %></td>
    <td><%= recipe_recipe.type %></td>
    <td><%= link_to 'Show', recipe_recipe %></td>
    <td><%= link_to 'Edit', edit_recipe_recipe_path(recipe_recipe) %></td>
    <td><%= button_to 'Destroy', recipe_recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

