<h1>Listing beers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Brewery</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @beers.each do |beer| %>
  <tr>
    <td><%= beer.name %></td>
    <td><%= beer.description %></td>
    <td><% unless beer.brewery.nil? %><%= beer.brewery.name %><% end %></td>
    <td><%= link_to 'Show', beer %></td>
    <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
    <td><%= button_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

